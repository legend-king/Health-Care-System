<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    android:orientation="horizontal">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardElevation="15dp"
        app:strokeWidth="3dp"
        app:strokeColor="#DAA914"
        android:outlineAmbientShadowColor="#AAA362"
        app:cardCornerRadius="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/rcPatDocProfile"
                android:layout_width="100dp"
                android:layout_height="125dp"
                android:layout_gravity="center"
                android:src="@drawable/doctor"
                app:civ_border_color="#3f51b5"
                app:civ_border_width="4dp"
                app:civ_shadow="true"
                android:layout_margin="10dp"
                app:civ_shadow_color="#3f51b5"
                app:civ_shadow_radius="10dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/rcPatSearchDoctorName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:textSize="26sp"
                    android:textStyle="bold"
                    android:text="TextView" />

                <TextView
                    android:id="@+id/rcPatSearchDoctorConsultationCharge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:text="Consultation Charge : " />

            </LinearLayout>


        </LinearLayout>




    </com.google.android.material.card.MaterialCardView>



</LinearLayout>